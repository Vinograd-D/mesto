.popup__close-button
  position absolute
  width 32px
  height 32px
  border 0
  background-color transparent
  background-image url("../../../images/Close.svg")
  background-position 50% 50%
  background-repeat no-repeat
  padding 0
  top -40px
  right -40px
  transition all .1s linear
  cursor pointer
  &:focus
    outline 0
  &:hover
    cursor pointer
    opacity 0.6
  @media (max-width tablet)
    width 20px
    height 20px
    right 0
    top -35px
