.popup
  position fixed
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.8)
  top 0
  left 0
  opacity 0
  visibility hidden
  overflow-y auto
  overflow-x hidden
  transition all 0.8s ease 0s

.popup.open
  opacity 1
  visibility visible
  .popup__content
    transform perspective(600px) translate(0px, 0%) rotateX(0deg)
    opacity 1


.popup__overlay
  position absolute
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.5)
  cursor pointer

.popup__body
  min-height 100%
  display flex
  align-items center
  justify-content center
  transition all 0.8s ease 0s

.popup__content
  background adt-color
  width 100%
  max-width 430px
  border-radius 10px
  box-sizing border-box
  position relative
  box-shadow 0 0 25px rgba(0, 0, 0, 0.15)
  margin 0
  padding 34px 36px 37px
  border none
  transition: all 0.8s ease 0s;
  opacity 0
  transform perspective(600px) translate(0px, -100%) rotateX(45deg)
  @media (max-width tablet)
    max-width 282px
    padding 22px 25px

.popup__title
  font-weight 900
  font-size 24px
  line-height 29px
  color main-color
  align-self flex-start
  margin 0 0 54px
  @media (max-width tablet)
    font-size 18px
    line-height 22px

.popup__form-field
  position relative
  display flex
  flex-direction column
  margin 0 0 30px
  &:last-of-type
    margin 0


.popup__input
  width 100%
  border 0
  border-bottom 1px solid rgba(0,0,0,.2)
  margin 0
  padding 13px 0
  outline none
  font-weight 400
  font-size 14px
  line-height 17px


.popup__button
  max-width 358px
  width 100%
  background-color main-color
  border-radius 2px
  color adt-color
  font-size 18px
  line-height 22px
  font-weight 400
  padding 14px 0 18px
  margin-top 48px
  border none
  transition all .1s linear
  cursor pointer
  &:hover
    opacity: .8
    border 1px solid #000000
    box-shadow 0 4px 4px rgba(0, 0, 0, 0.25)
  @media (max-width tablet)
    padding 14px 0
    margin-top 45px
    font-size 14px
    line-height 17px

.popup__close-button
  position absolute
  width 32px
  height 32px
  border 0
  background-color transparent
  background-image url("../../images/Close.svg")
  background-position 50% 50%
  background-repeat no-repeat
  padding 0
  top -40px
  right -40px
  transition all .1s linear
  cursor pointer
  &:focus
    outline 0
  &:hover
    cursor pointer
    opacity 0.6
  @media (max-width tablet)
    width 20px
    height 20px
    right 0
    top -35px
