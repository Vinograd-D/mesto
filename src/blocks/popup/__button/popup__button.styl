.popup__button
  max-width 358px
  width 100%
  background-color main-color
  border-radius 2px
  color adt-color
  font-size 18px
  line-height 22px
  font-weight 400
  padding 14px 0 18px
  margin-top 48px
  border none
  transition all .1s linear
  cursor pointer
  &:hover
    opacity: .8
    border 1px solid #000000
    box-shadow 0 4px 4px rgba(0, 0, 0, 0.25)
  @media (max-width tablet)
    padding 14px 0
    margin-top 45px
    font-size 14px
    line-height 17px

