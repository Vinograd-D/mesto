.profile__add-button
  box-sizing border-box
  width 150px
  height 50px
  border 2px solid #FFFFFF
  border-radius 2px
  background: url("../../../images/Add-Button.svg") no-repeat
  margin-left auto
  background-position 50%
  tr(all, .4s)
  cursor pointer
  &:hover
    opacity .6
  @media (max-width: tablet)
    margin-left 0
    width 100%
    height 50px
